<Window x:Class="CyberChatbotGUI.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberChatbotGUI"
        mc:Ignorable="d"
        Title="Cybersecurity Quiz" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock x:Name="QuestionText" FontSize="18" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <ListBox x:Name="OptionList" SelectionMode="Single" />
            <Button Content="Submit" Click="Submit_Click" Margin="0,10,0,0"/>
            <TextBlock x:Name="FeedbackText" Foreground="Green" Margin="0,10,0,0"/>
            <Button Content="Back to Chat" Click="BackButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
